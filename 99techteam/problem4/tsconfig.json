{
  "compilerOptions": {
    "target": "ES2020", // JavaScript version
    "module": "CommonJS", // Module system
    "rootDir": "./", // Source code folder
    "outDir": "./dist", // Compiled code output folder
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Allow default imports from CommonJS
    "skipLibCheck": true // Skip type-checking for libraries
  },
  "exclude": ["node_modules"] // Exclude dependencies
}
